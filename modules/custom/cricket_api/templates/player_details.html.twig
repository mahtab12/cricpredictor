      <div class="tab-content">

        <div class="tab-pane active">
          <div class="tab-content-wrapper" style="background: lightgrey">
            <div class="shield-player-name">
              <img src=""><h1 class="player-name">
                <span>{{ data.meta.firstName }}</span>
                <span>{{ data.meta.lastName }}</span>
              </h1>

            </div>
            <img src="{{ data.meta.imageUrl }}" class="player-img img-responsive" alt="">
            <div class="player-type-wrapper">
              <p class="player-type">{{ data.meta.playerType }}</p>
              <p>Bats {{ data.meta.battingStyle }}.<br>Bowls {{ data.meta.bowlingStyle }}</p>
            </div>
            <div class="player-facts-wrapper">
              {% if data.meta.didYouKnow is not empty %}
                <p class="player-type">Did you know?</p>
                <p></p><p class="p1">{{ data.meta.didYouKnow }}</p><p></p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>

