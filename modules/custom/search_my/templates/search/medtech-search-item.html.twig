    <a href="#" class="dropdown-toggle btn btn-link" data-toggle="dropdown" aria-expanded="false">
     <span class="fa fa-arrow-circle-down"></span> Download <span class="caret"></span></a>
    <ul class="dropdown-menu search-downloads" role="menu">
      {% for key,attachment in content.file_attachments_url  %}
        
          {% set ext_type =  attachment |split('.')|last %}
          {% if(ext_type == 'pdf') %}
          {%  set ext_type_class =  'icon-pdf' %}
          {% elseif(ext_type == 'xlxm') %}
          {%  set ext_type_class =  'icon-excel' %}
          {% elseif(ext_type == 'xls') %}
          {%  set ext_type_class =  'icon-excel' %}
          {% elseif(ext_type == 'pptx') %}
          {%  set ext_type_class =  'icon-powerpoint' %}
          {%endif%}          
       {# <li><a href="/download/files?download_url={{ attachment }}&amp;filename={{ content.file_attachments_name[key] }}" data-csg-nid="{{content.nid}}" data-file-name="A-R-Type-2-Diabetes-(US)-(2).pptx.pptx" data-file-type="attachments" data-sku="COMING_SOON" data-url="{{ content.url }}">
                <span class="icon {{ ext_type_class }}"></span> 
                {{ content.file_attachments_name[key] }}
            </a>
        </li>#}
        
        {% if content.hasAccess == 1 %}
        <li><a href="{{ attachment }}" target="_blank" data-file-name="{{ content.file_attachments_name[key] }}" data-file-type="attachments" data-sku="COMING_SOON" data-url="{{ content.url }}">
                <span class="icon {{ ext_type_class }}"></span> 
                {{ content.file_attachments_name[key] }}
            </a>
        </li>        
        {%else%}
          <li><a href="javascript:void(0);" data-csg-nid="{{content.nid}}" data-file-name="{{ content.file_attachments_name[key] }}" data-file-type="attachments" data-sku="COMING_SOON" data-url="">
                <span class="icon {{ ext_type_class }}"></span> 
                {{ content.file_attachments_name[key] }}
            </a>
        </li>  
        {%endif%} 
       
        
        
      {% endfor %}
    </ul>
</span> 
{% endif %}
  
</div> 

<div class="chapter-matches collapse" id="result-{{ content.nid }}" aria-expanded="false" style="height: 0px;">
 </div>


