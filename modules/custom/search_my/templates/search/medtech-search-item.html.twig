{% if content.hasAccess == 1 %}
<span class="owned-tag">Owned</span> 
{%else%}
<span class="not-owned-tag">Not Owned</span> 
{%endif%}


  <span class="pub-date"><i class="fa fa-calendar"></i> {{ content.publish_date|date("j M Y") }}</span> 
 {% if(content.file_attachments_url | length > 0) %}   
